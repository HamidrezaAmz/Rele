<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextViewSubTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="GlobalButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:background">@drawable/retry_button_background</item>
    </style>

</resources>
