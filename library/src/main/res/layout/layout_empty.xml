<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <LinearLayout
        android:id="@+id/emptyHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.vasl.recyclerlibrary.customViews.CustomImageView
            android:id="@+id/emptyImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/empty_256" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emptyTextViewTitle"
            style="@style/TextViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Oops" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emptyTextViewSubTitle"
            style="@style/TextViewSubTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_item_to_show" />

    </LinearLayout>
</layout>