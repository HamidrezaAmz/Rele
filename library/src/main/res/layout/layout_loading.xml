<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/mkLoader"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:mk_color="@color/gray"
        app:mk_type="Whirlpool" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loadingTextViewTitle"
        style="@style/TextViewTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/loadingTextViewSubTitle"
        style="@style/TextViewSubTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_sub_title" />

</LinearLayout>